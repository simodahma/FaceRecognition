<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.app.yarabisahl.AddStudent">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="10dp"
        app:srcCompat="@android:color/holo_green_dark"
        android:id="@+id/imageView7"
        android:layout_above="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <com.alimuzaffar.lib.widgets.AnimatedEditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="Entrer Spinneret :"
        android:inputType="textNoSuggestions"
        app:animationType="fromRight"
        app:animateCursor="true"
        app:animateTextClear="true"
        android:id="@+id/E_Fil"
        android:textCursorDrawable="@android:color/holo_green_light"
        android:layout_above="@+id/Add_Etd"
        android:layout_alignStart="@+id/E_Name"
        android:layout_marginBottom="35dp" />

    <com.alimuzaffar.lib.widgets.AnimatedEditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="Entrer  F_name :"

        android:inputType="textNoSuggestions"
        app:animationType="fromRight"
        app:animateCursor="true"
        app:animateTextClear="true"
        android:id="@+id/E_NameF"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/white"
        android:textCursorDrawable="@android:color/holo_green_light"
        android:nestedScrollingEnabled="false"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/E_CneX"
        android:layout_alignStart="@+id/E_Name" />

    <com.alimuzaffar.lib.widgets.AnimatedEditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="Enter Cne : "

        android:inputType="textNoSuggestions"
        app:animationType="fromRight"
        app:animateCursor="true"
        app:animateTextClear="true"
        android:layout_marginLeft="11dp"
        android:id="@+id/E_CneX"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/black"
        android:textCursorDrawable="@android:color/holo_green_light"
        android:nestedScrollingEnabled="false"
        android:layout_above="@+id/E_Name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="17dp" />

    <com.alimuzaffar.lib.widgets.AnimatedEditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="Entrer L_name :"
        android:inputType="textNoSuggestions"
        app:animationType="fromRight"
        app:animateCursor="true"
        app:animateTextClear="true"
        android:id="@+id/E_Name"
        android:cursorVisible="true"
        android:textColorLink="@android:color/background_light"
        android:textCursorDrawable="@android:color/holo_green_light"
        android:layout_marginBottom="71dp"
        android:layout_above="@+id/E_Fil"
        android:layout_alignStart="@+id/E_CneX" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/Add_Etd"
        android:background="@android:color/transparent"
        android:text="Save"
        android:onClick="Train"
        android:textColor="@android:color/holo_green_light"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/E_Fil" />

    <Button
        android:text="Detect face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Detect"
        android:layout_marginEnd="16dp"
        android:id="@+id/Btn_Detect"
        android:background="@android:color/transparent"
        android:textColor="@android:color/holo_green_light"
        android:layout_below="@+id/E_Fil"
        android:layout_alignParentEnd="true"
         />

    <TextView
        android:text="Add Student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label"
        android:textStyle="normal|bold"
        android:textSize="25sp"
        android:layout_below="@+id/imageView7"
        android:layout_alignStart="@+id/E_CneX" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/student"
        android:id="@+id/Etd_Pic"
        android:layout_marginLeft="180dp"
        android:layout_below="@+id/imageView7"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/Btn_UpX"
        android:background="@android:color/transparent"
        android:text="Take Picture"
        android:onClick="Pic"
        android:textColorLink="@android:color/holo_green_light"
        android:textColor="@android:color/holo_green_light"
        android:layout_below="@+id/Etd_Pic"
        android:layout_toEndOf="@+id/E_CneX" />

</RelativeLayout>
