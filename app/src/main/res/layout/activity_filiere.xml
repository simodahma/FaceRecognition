<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_filiere"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.app.yarabisahl.Filiere">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="10dp"
        app:srcCompat="@android:color/holo_green_dark"
        android:id="@+id/imageView"
        android:layout_above="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Add Spinneret :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textStyle="normal|bold"
        android:textSize="25sp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/addd"
        android:id="@+id/imageView8"
        android:layout_marginLeft="35dp"
        android:layout_toEndOf="@+id/textView2"
        android:layout_alignTop="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Btn_del"
        android:background="@android:color/holo_green_dark"
        android:text="Delete"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Btn_add"
        android:background="@android:color/holo_green_dark"
        android:text="Add "
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <com.alimuzaffar.lib.widgets.AnimatedEditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="Name Of Spinneret :"

        android:inputType="textNoSuggestions"
        app:animationType="fromRight"
        app:animateCursor="true"
        app:animateTextClear="true"
        android:layout_marginLeft="50dp"
        android:id="@+id/T_A_S"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/white"
        android:textCursorDrawable="@android:color/holo_green_light"
        android:nestedScrollingEnabled="false"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/imageView8"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginStart="11dp" />

</RelativeLayout>
