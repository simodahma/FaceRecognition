<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.app.yarabisahl.MainActivity"
    android:background="?android:attr/colorControlHighlight">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:srcCompat="@drawable/line_zpsrtpfvvhy"
        android:id="@+id/imageView5"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Student"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:textColor="@android:color/background_dark"
        android:textSize="23dp"
        android:textStyle="bold"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/imageView5" />

    <com.alimuzaffar.lib.widgets.AnimatedEditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="    Password"
        android:inputType="textNoSuggestions"
        app:animationType="fromRight"
        app:animateCursor="true"
        app:animateTextClear="true"
        android:layout_marginLeft="100dp"
        android:id="@+id/E_NameF"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/white"
        android:textCursorDrawable="@android:color/holo_green_light"
        android:nestedScrollingEnabled="false"
        android:drawableLeft="@drawable/key"
        android:password="true"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/E_Name"
        android:layout_centerHorizontal="true" />

    <com.alimuzaffar.lib.widgets.AnimatedEditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="    UserName"
        android:inputType="textNoSuggestions"
        app:animationType="fromRight"
        app:animateCursor="true"
        app:animateTextClear="true"
        android:id="@+id/E_Name"
        android:cursorVisible="true"
        android:drawableLeft="@drawable/user"
        android:textColorLink="@android:color/background_light"
        android:textCursorDrawable="@android:color/holo_green_light"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignStart="@+id/E_NameF" />

    <Button
        android:text="Sign In"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/Btn_Sign_in"
        android:layout_marginRight="20dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/background_dark"
        android:textSize="12dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/BtnTeacher" />

    <Button
        android:text="Log in"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/BtnTeacher"
        android:layout_marginRight="20dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/background_dark"
        android:textSize="12dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView15"
        android:layout_marginStart="19dp" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="220dp"
        app:srcCompat="@drawable/img"
        android:id="@+id/imageView2"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="FRS"
        android:layout_width="20dp"
        android:layout_height="105dp"
        android:id="@+id/textView15"
        android:textColor="@android:color/holo_green_light"
        android:textSize="30dp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView14"
        android:layout_alignStart="@+id/textView14" />
</RelativeLayout>
