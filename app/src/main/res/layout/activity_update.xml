<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_update"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.app.yarabisahl.Update">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="10dp"
        app:srcCompat="@android:color/holo_green_dark"
        android:id="@+id/imageView7"
        android:layout_above="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/Etd_Pic"
        android:layout_marginLeft="180dp"
        android:layout_below="@+id/label"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        app:srcCompat="@drawable/data_update" />

    <TextView
        android:text="Update Students"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label"
        android:textStyle="normal|bold"
        android:textSize="25sp"
        android:layout_below="@+id/imageView7"
        android:layout_alignStart="@+id/E_CneX" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/Btn_UpX"
        android:background="@android:color/transparent"
        android:text="Update"
        android:onClick="Pic"
        android:textColor="@android:color/holo_green_light"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <com.alimuzaffar.lib.widgets.AnimatedEditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="Change Cne : "

        android:inputType="textNoSuggestions"
        app:animationType="fromRight"
        app:animateCursor="true"
        app:animateTextClear="true"
        android:layout_marginLeft="11dp"
        android:id="@+id/E_CneX"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/black"
        android:textCursorDrawable="@android:color/holo_green_light"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/Etd_Pic"
        android:layout_alignEnd="@+id/Btn_UpX" />

    <com.alimuzaffar.lib.widgets.AnimatedEditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="Change Spinneret :"
        android:inputType="textNoSuggestions"
        app:animationType="fromRight"
        app:animateCursor="true"
        app:animateTextClear="true"
        android:id="@+id/E_Fil"
        android:textCursorDrawable="@android:color/holo_green_light"
        android:layout_below="@+id/E_NameF"
        android:layout_alignStart="@+id/E_NameF"
        android:layout_marginTop="20dp" />

    <com.alimuzaffar.lib.widgets.AnimatedEditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="Change  F_name :"

        android:inputType="textNoSuggestions"
        app:animationType="fromRight"
        app:animateCursor="true"
        app:animateTextClear="true"
        android:id="@+id/E_NameF"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/white"
        android:textCursorDrawable="@android:color/holo_green_light"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/E_Name"
        android:layout_alignStart="@+id/E_Name"
        android:layout_marginTop="18dp" />

    <com.alimuzaffar.lib.widgets.AnimatedEditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="Change L_name :"
        android:inputType="textNoSuggestions"
        app:animationType="fromRight"
        app:animateCursor="true"
        app:animateTextClear="true"
        android:id="@+id/E_Name"
        android:cursorVisible="true"
        android:textColorLink="@android:color/background_light"
        android:textCursorDrawable="@android:color/holo_green_light"
        android:layout_below="@+id/E_CneX"
        android:layout_alignStart="@+id/E_CneX"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_above="@+id/E_CneX"
        android:layout_alignStart="@+id/E_CneX"
        android:id="@+id/Yarabisahel" />

</RelativeLayout>
